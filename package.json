{
  "name": "poolcare",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "setup": "bash scripts/dev.sh",
    "build": "turbo run build",
    "build:render": "turbo run build --filter=@poolcare/api --filter=@poolcare/web",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "pnpm --filter @poolcare/db generate",
    "db:migrate": "pnpm --filter @poolcare/db migrate",
    "db:studio": "pnpm --filter @poolcare/db studio",
    "db:seed": "pnpm --filter @poolcare/db seed"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}

